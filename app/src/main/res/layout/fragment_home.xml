<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/comude_img_2"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background">

        </FrameLayout>
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/boton_chat"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_chat_white_36dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toRightOf="@+id/boton_redes_sociales"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_check_in"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.496" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="108dp"
            android:layout_height="19dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/chat"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/boton_chat"
            app:layout_constraintRight_toRightOf="@+id/boton_chat"
            app:layout_constraintTop_toBottomOf="@+id/boton_chat"
            app:layout_constraintHorizontal_bias="0.548" />

        <Button
            android:id="@+id/boton_redes_sociales"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_group_white_36dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_eventos"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.496" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="79dp"
            android:layout_height="43dp"
            android:gravity="center_horizontal"
            android:text="@string/codigo_guanajoven"
            android:textColor="@color/white"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_codigo_guanajoven"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/boton_codigo_guanajoven"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/boton_codigo_guanajoven"
            app:layout_constraintHorizontal_bias="0.363" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="88dp"
            android:layout_height="38dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/eventos"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/boton_eventos"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/boton_eventos"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/boton_eventos" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="66dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/checkin_texto"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/boton_check_in"
            app:layout_constraintLeft_toLeftOf="@+id/boton_check_in"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/boton_check_in"
            app:layout_constraintHorizontal_bias="0.482"
            card_view:layout_editor_absoluteY="312dp"
            card_view:layout_editor_absoluteX="286dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="54dp"
            android:layout_height="38dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/social"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/boton_redes_sociales"
            app:layout_constraintRight_toRightOf="@+id/boton_redes_sociales"
            app:layout_constraintTop_toBottomOf="@+id/boton_redes_sociales" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/comude_logo"
            app:layout_constraintHorizontal_bias="0.502" />

        <Button
            android:id="@+id/boton_convocatorias"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_announcement_white_36dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintRight_toLeftOf="@+id/boton_redes_sociales"
            android:layout_marginRight="58dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_codigo_guanajoven"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/boton_codigo_guanajoven"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_person_white_36dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintRight_toLeftOf="@+id/boton_eventos"
            android:layout_marginRight="64dp" />

        <Button
            android:id="@+id/boton_eventos"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_event_white_36dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:layout_constraintHorizontal_bias="0.501" />

        <Button
            android:id="@+id/boton_check_in"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_event_available_white_36dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            app:layout_constraintLeft_toRightOf="@+id/boton_eventos"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

        <TextView
            android:id="@+id/tv_perfil"
            android:layout_width="102dp"
            android:layout_height="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/convocatorias"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintLeft_toLeftOf="@+id/boton_convocatorias"
            app:layout_constraintRight_toRightOf="@+id/boton_convocatorias"
            app:layout_constraintTop_toBottomOf="@+id/boton_convocatorias" />
    </android.support.constraint.ConstraintLayout>


    <ImageButton
        android:id="@+id/boton_navigation_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:srcCompat="@drawable/ic_menu_white_24dp" />

    <ImageButton
        android:id="@+id/boton_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:background="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_help" />

    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/slide_publicidad"
        android:layout_gravity="right">
        <ImageButton
            android:id="@+id/btn_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@android:color/transparent"
            android:layout_marginTop="70dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp" />

    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/pnl_publicidad"
        android:layout_gravity="right"
        android:background="@color/black"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_container"
            android:src="@drawable/publicidad1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:id="@+id/close"
            android:src="@drawable/ic_close_white_24dp"
            android:padding="16dp"
            android:layout_gravity="right|top"
            />
    </FrameLayout>
</FrameLayout>